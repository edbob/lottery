<section class="blk-main">
    {{#if error}} <span>{{error}}</span>{{/if}}
    <div class="blk-lottery">
        <ul id="set-lot">
            <li id="ds1">0</li>
            <li id="ds2">0</li>
            <li id="ds3">0</li>
            <li id="ds4">0</li>
            <li id="ds5">0</li>
        </ul>
        <form name="contForm" id="form-control" method="POST" action="/addSum">
            <input type="button" name="fstart" value="start" class="">
            <input type="button" name="fstop" value="stop" class="">
            <label>your option!</label>
            <span id="mresult"></span>
            <span id="helpers">Unacceptable quantity! and must not be zero!</span>
            <input type="number" name="fresult" maxlength="5" placeholder="00000" class="result">
            <span>set to 5 maxlength</span>
            <label>You can try again</label>
            <input type="reset" name="freset" value="Try again" class="btn-default reset">
        </form>
    </div>
</section>
<section class="blk-results">
    <div class="blk-res">
        <span>your results</span>
        <ul id="user-result" class="resList"></ul>
    </div>
    <div class="blk-res">
        <span>lot results</span>
        <ul id="pc-result" class="resList"></ul>
    </div>
    <div class="blk-res">
        <span>Winning!</span>
        <ul id="my-win" class="resList"></ul>
    </div>
    <div class="blk-res">
        <span>Money!</span>
        <ul id="my-miney" class="resList">
            <li>1000<sup>USD</sup></li>
        </ul>
    </div>
</section>